{
  "$id": "https://denidin.example/schemas/mcp/webhook.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Webhook Event",
  "type": "object",
  "x-http": {
    "method": "POST",
    "path": "/webhooks/morning (incoming)",
    "notes": "Incoming webhook payload sent from Green Invoice to the configured notifyUrl; this is the contract for received events."
  },
  "properties": {
    "id": {"type": "string"},
    "status": {"type": "string"},
    "parsed_metadata": {"type": "object"}
  },
  "required": ["id","status"],
  "examples": [
    {"id":"123","status":"parsed","parsed_metadata":{"foo":"bar"}}
  ]
}
